<Window x:Class="CSAMS.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CSAMS – Login"
        Height="689"
        Width="982"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F3F4F6">
    <Grid>
        <!-- TOP TITLE BAR -->
        <Border Background="#0D0B24" Height="60" VerticalAlignment="Top">
            <TextBlock Text="CS3 Attendance Management System"
                       Foreground="White"
                       FontSize="20"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- CARD -->
        <Border Width="540"
                Margin="0,80,0,10"
                HorizontalAlignment="Center"
                Background="White"
                BorderBrush="#D1D5DB"
                BorderThickness="1"
                CornerRadius="4"
                Padding="0,0,0,30"
                >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- card header -->
                <Border Grid.Row="0"
                        Height="80"
                        Background="#0D0B24">
                    <TextBlock Text="Welcome to CSAMS"
                               Foreground="White"
                               FontSize="24"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </Border>

                <!-- form body -->
                <StackPanel Grid.Row="1"
                            Margin="60,30">
                    <TextBlock Text="Welcome"
                               FontSize="28"
                               FontWeight="Bold"/>
                    <TextBlock Text="Log in to CS3 Attendance Management System"
                               FontSize="16"
                               Margin="0,6,0,20"
                               Foreground="#374151"/>

                    <TextBlock Text="Developed by Computer Science Students"
                               FontSize="12"
                               Foreground="#6B7280"
                               Margin="0,0,0,30"/>

                    <!-- Email -->
                    <TextBlock Text="Email"
                               FontSize="14"
                               Margin="0,0,0,4"/>
                    <TextBox x:Name="EmailTextBox"
                             Height="42"
                             FontSize="14"
                             Padding="10,0"
                             BorderBrush="#1E293B"
                             BorderThickness="2"
                             Background="#FFF"
                             />

                    <!-- Password -->
                    <TextBlock Text="Password"
                               FontSize="14"
                               Margin="0,20,0,4"/>
                    <PasswordBox x:Name="PasswordBox"
                                 Height="42"
                                 FontSize="14"
                                 Padding="10,0"
                                 BorderBrush="#D1D5DB"
                                 BorderThickness="2"/>

                    <!-- Login button -->
                    <Button Content="Login"
                            Click="LoginButton_Click"
                            Height="44"
                            Margin="0,30,0,0"
                            FontSize="16"
                            Background="#0D0B24"
                            Foreground="White"
                            BorderThickness="0"
                            />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
