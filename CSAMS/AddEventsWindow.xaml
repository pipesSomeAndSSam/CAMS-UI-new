<Window x:Class="CSAMS.AddEventsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Events"
        Height="520"
        Width="580"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#F1F5F9">

    <DockPanel Margin="20">
        <!-- Header -->
        <Border Background="#0F172A" CornerRadius="4" Padding="16" DockPanel.Dock="Top" Margin="0,0,0,20">
            <TextBlock Text="Add Events"
                       Foreground="White"
                       FontSize="24"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Add Event Button at the Bottom -->
        <Button Content="Add Event"
                Height="36"
                Width="130"
                HorizontalAlignment="Right"
                Margin="0,20,0,0"
                Background="#0F172A"
                Foreground="White"
                FontWeight="Bold"
                BorderThickness="0"
                Cursor="Hand"
                DockPanel.Dock="Bottom"/>

        <!-- Main Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Event Name -->
                <TextBlock Text="Event Name" Margin="0,0,0,4"/>
                <TextBox Height="32"
                         Margin="0,0,0,12"
                         Padding="6"
                         BorderBrush="#0F172A"
                         BorderThickness="1"
                         FontSize="14"/>

                <!-- Date Start -->
                <TextBlock Text="Date Start" Margin="0,0,0,4"/>
                <DatePicker Height="32"
                            Margin="0,0,0,12"
                            FontSize="14"/>

                <!-- Time Range -->
                <UniformGrid Columns="2" Margin="0,0,0,12">
                    <StackPanel Margin="0,0,8,0">
                        <TextBlock Text="Time From" Margin="0,0,0,4"/>
                        <DockPanel>
                            <TextBox Width="100" Height="30" Margin="0,0,6,0"/>
                            <ComboBox Width="60" Height="30">
                                <ComboBoxItem Content="AM"/>
                                <ComboBoxItem Content="PM"/>
                            </ComboBox>
                        </DockPanel>
                    </StackPanel>
                    <StackPanel Margin="8,0,0,0">
                        <TextBlock Text="Time Till" Margin="0,0,0,4"/>
                        <DockPanel>
                            <TextBox Width="100" Height="30" Margin="0,0,6,0"/>
                            <ComboBox Width="60" Height="30">
                                <ComboBoxItem Content="AM"/>
                                <ComboBoxItem Content="PM"/>
                            </ComboBox>
                        </DockPanel>
                    </StackPanel>
                </UniformGrid>

                <!-- Time In/Out -->
                <UniformGrid Columns="2">
                    <StackPanel Margin="0,0,8,0">
                        <TextBlock Text="Time In Start" Margin="0,0,0,4"/>
                        <DockPanel>
                            <TextBox Width="100" Height="30" Margin="0,0,6,0"/>
                            <ComboBox Width="60" Height="30">
                                <ComboBoxItem Content="AM"/>
                                <ComboBoxItem Content="PM"/>
                            </ComboBox>
                        </DockPanel>
                    </StackPanel>
                    <StackPanel Margin="8,0,0,0">
                        <TextBlock Text="Time Out Start" Margin="0,0,0,4"/>
                        <DockPanel>
                            <TextBox Width="100" Height="30" Margin="0,0,6,0"/>
                            <ComboBox Width="60" Height="30">
                                <ComboBoxItem Content="AM"/>
                                <ComboBoxItem Content="PM"/>
                            </ComboBox>
                        </DockPanel>
                    </StackPanel>
                </UniformGrid>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
